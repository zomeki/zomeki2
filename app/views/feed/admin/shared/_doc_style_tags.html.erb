<div id="doc_style_tags" title="置き換えテキスト" style="display: none;">
  <table>
    <tr>
      <th>タイトル（リンクなし）</th><td>@title@</td>
    </tr>
    <tr>
      <th>タイトル（リンクあり）</th><td>@title_link@</td>
    </tr>
    <tr>
      <th>公開日</th><td>@publish_date@</td>
    </tr>
    <tr>
      <th>公開時間</th><td>@publish_time@</td>
    </tr>
    <tr>
      <th>概要</th><td>@summary@</td>
    </tr>
    <tr>
      <th>カテゴリ（リンクなし）</th><td>@category@</td>
    </tr>
    <% if false %>
    <tr>
      <th>カテゴリ（リンクあり）</th><td>@category_link@</td>
    </tr>
    <% end %>
    <tr>
      <th>添付画像（リンクなし）</th><td>@image@</td>
    </tr>
    <tr>
      <th>添付画像（リンクあり）</th><td>@image_link@</td>
    </tr>
    <tr>
      <th>記事へのリンク</th><td>@doc{{@〜@}}doc@</td>
    </tr>
    <tr>
      <th>Newマーク</th><td>@new_mark@</td>
    </tr>
    <tr>
      <th>フィード名</th><td>@feed_name@</td>
    </tr>
  </table>
</div>
