<h2><%= @content.name %><%= sub ? " ： #{sub}" : '' %></h2>

<div class="actionMenu">
  <%= action_menu :new if controller_name == 'feeds' %>
  <%= action_menu :index, index_path %>
  <%= action_menu :show %>
  <%= action_menu :edit if @item.try(:editable?) %>
  <%= action_menu :destroy if @item.try(:deletable?) && controller_name == 'feeds' %>

  <%- if controller_name == 'entries' -%>

  <% if params[:action] == 'index' %>
  <%= link_to "エントリ更新", feed_feed_entries_path(:do => 'update_entries'), :confirm => "エントリを更新してよろしいですか？" %>
  <%= link_to "エントリ削除", feed_feed_entries_path(:do => 'delete_entries'), :confirm => "エントリを削除してよろしいですか？" %>
  <% end %>
  <%- end -%>
</div>
